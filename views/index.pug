extends layout

block content
  h1= title
  p Well hello there! This is #{title}
  <button type="button" class="btn btn-secondary" onclick="doBump()">Press me for the contents</button>
  .bump= 'Count ' +  count + ' Bump ' + bump
  script. 
    let count = 0
    let bump = 1
    function doBump(){
      count = count + bump;
      bump = bump + 1;
    }


